{
  "server_url": "http://localhost:55000/api/v1",
  "agent_id": "03c3e2c2-b9e7-4a3b-b140-ec52c8a5832f",
  "agent_name": "Linux-Agent",
  "heartbeat_interval": 30,
  "monitoring": {
    "file_system": true,
    "monitored_paths": [
      "/home",
      "/var/www",
      "/opt/data"
    ],
    "exclude_paths": [
      "/home/*/.cache",
      "/home/*/.local/share",
      "/home/*/snap"
    ],
    "file_extensions": [
      ".pdf",
      ".docx",
      ".xlsx",
      ".txt",
      ".csv",
      ".json",
      ".xml",
      ".sql",
      ".conf"
    ]
  },
  "classification": {
    "enabled": true,
    "max_file_size_mb": 10
  }
}